<div class="container">

  <h1>New Goal</h1>
  <%= simple_form_for(@goal) do |f| %>
    <div class="form-inputs">
      <%= f.input :name %>
      <%= f.input :amount_cents %>
      <%= f.input :completion_date %>
      <%= f.input :link %>
    </div>

   <div class="form-actions">
        <%= f.button :submit, "Sign up", class:"btn btn-primary" %>
    </div>
  <% end %>
  </div>

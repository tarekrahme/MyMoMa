<div class="container">
  <div class="progress mt-4" style="height: 30px">
    <div class="progress-bar progress-bar-striped progress-bar-animated bg-primary" role="progressbar" style="width: <%= (@progress/ @goal.amount_cents)*100 %>%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100">
      <div style="font-size: 16px">
      <%= (@progress/ @goal.amount_cents).round(1) *100 %>% of <%= @goal.amount.to_i %>£
      </div>
    </div>
  </div>
  <%= link_to edit_goal_path(@goal) do %>
    <div class="background-image text-decoration-none" style="height: 250; background-image: url(<%= @goal.picture.file ? (cl_image_path @goal.picture, crop: :fill) : 'https://images.unsplash.com/photo-1506666823169-bafe353bae96?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=2850&q=80' %>); height: 400px; background-size: cover; background-repeat: no-repeat; background-position: center;">
      <h1 class="text-dark text-decoration-none"><%= current_user.wallet.goal.name.capitalize %></h1>
  </div>

  <% end %>
  <br>
  <div class="goal-amount">
    <p>Saving £<%= @goal.monthly_contribution.to_i %> monthly <br> until <%= @goal.completion_date.month %>/<%= @goal.completion_date.year %></p>
  </div>
  <br>

</div>

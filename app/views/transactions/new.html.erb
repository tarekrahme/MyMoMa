<div class="container">

  <h1>New transaction</h1>
  <%= simple_form_for(@transaction) do |f| %>
    <div class="form-inputs">
      <%= f.input :merchant %>
      <%= f.input :amount_cents %>
      <%= f.input :day, as: :string, input_html: { class: 'datepicker' } %>
    </div>

   <div class="form-actions">
        <%= f.button :submit, "Add transaction", class:"btn btn-primary" %>
    </div>
  <% end %>
  </div>

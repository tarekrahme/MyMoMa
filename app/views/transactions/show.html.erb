<div class="container">
  <div class="transaction-show text-center mt-5"; style='position: relative'>
    <h1>Â£<%= @transaction.amount_cents / 100.0 %></h1>
    <br>
    <h5>at</h5>
    <h2> <%= @transaction.merchant.capitalize %></h2>
    <br>
    <h5>on</h5>
    <h2> <%= @transaction.day.date.strftime('%a %d %b') %></h2>

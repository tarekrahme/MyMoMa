<div class="wallet-wrapper" style="height: calc(100vh - 118px);">
<h6 style="margin-left: 30px; margin-bottom: 0px; opacity: 0.3;"><% d = Date.today %>
  <%= d.strftime("%A, %b %d")%>
</h6>
<h3 style="margin-left: 30px; opacity: 0.5;">Welcome back 👋🏼</h3>
    <div class="container" style="position:relative; height: 100px">
      <div class="container" style="padding-bottom: 8px; display: flex; justify-content: space-around">
        <div class="circle">
          <div class="" style="justify-content:space-around;">
            <h6 style="line-height: 80%; margin: 0px">You have</h6>
            <div class="font-weight-bold" style="font-size: 45px;">
              <% if @daily_remaining>= 0 %>
                £ <%= @daily_remaining.round(1) %>
              <% else %>
                £ <%= 0 %>
              <% end %>
            </div>
            <h6 style="line-height: 80%; margin: 0px">left for today!</h6>
          </div>
        </div>
      </div>
    </div>

    <div class=" info-flex blue-background radius-top">
      <div class="box" style="height: 100%; margin-top: 65px; position: relative">
        <h5 class="mb-3 mt-5">Latest transactions</h5>
        <div class="wallet-transactions" style="width: 85vw">
          <% @transactions.each do |transaction| %>
            <div class="">
              <%= link_to transaction_path(transaction) do %>
                <div class="flex-and-between">
                  <div class="merchant-info flex-and-between">
                    <% case transaction.merchant %>
                      <% when "Bakery" %>
                        <p style="text-align: center; font-size: 30px; margin: 0 5px">🥐</p>
                      <% when "Eat" %>
                        <p style="text-align: center; font-size: 30px; margin: 0 5px">🍌</p>
                      <% when "Pharmacy" %>
                        <p style="text-align: center; font-size: 30px; margin: 0 5px">💊</p>
                      <% when "Pret" %>
                        <p style="text-align: center; font-size: 30px; margin: 0 5px">🥗</p>
                      <% when "Book" %>
                        <p style="text-align: center; font-size: 30px; margin: 0 5px">📚</p>
                      <% when "Water" %>
                        <p style="text-align: center; font-size: 30px; margin: 0 5px">💦</p>
                      <% when "Plant" %>
                        <p style="text-align: center; font-size: 30px; margin: 0 5px">🌱</p>
                      <% when "Tesco" %>
                        <p style="text-align: center; font-size: 30px; margin: 0 5px">🥦</p>
                    <% end %>
                    <div>
                      <p class="font-weight-bold no-bottom-margin"><%= transaction.merchant %></p>
                      <h6 style="opacity: 0.3;"><%= transaction.created_at.strftime("%A, %b %d") %></p>
                    </div>
                  </div>
                  <h5 class="red-font">-£<%= transaction.amount_cents / 100.0 %></h5>
                </div>
              <% end %>
            </div>
          <% end %>
        </div>
        <%= link_to "All transactions", transactions_path, class:"text-right", style:"text-decoration: underline;" %>
        <%= link_to "+", new_transaction_path, class:"btn-add btn-add-absolute" %>
      </div>
    </div>
  </div>
